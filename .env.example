# Server Configuration
NODE_ENV=development
PORT=3000
SERVER_URL=http://localhost:3000
# Production: set FRONTEND_URL to https://skillstream.world (comma-separated if multiple origins)
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://skillstream:password@localhost:5432/skillstream

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
RESET_TOKEN_SECRET=your-reset-token-secret-change-in-production

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=myStrongPassword

# Supabase Configuration (if using Supabase Auth)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-service-role-key

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=no-reply@skillstream.com

# Cloudflare (images + stream + R2)
# Account ID and API token: used for both Cloudflare Images and Cloudflare Stream (token needs Images Write + Stream Edit)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
# R2: required for non-image files (PDFs, docs, zips), and fallback for images when Images is not configured
CLOUDFLARE_R2_BUCKET_NAME=skillstream-media
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
# Optional: public URL base for R2 (e.g. https://media.skillstream.world) so returned URLs are publicly readable
# CLOUDFLARE_R2_PUBLIC_BASE_URL=https://media.skillstream.world

# Firebase Auth: require email verification before allowing sign-in (set to false to disable in dev)
# REQUIRE_EMAIL_VERIFICATION=true

# Firebase App Check: when true, API verifies X-Firebase-AppCheck header when present (optional)
# ENABLE_APP_CHECK=false

# Sentry (optional; enables error tracking in dev and production when set)
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
# SENTRY_TRACES_SAMPLE_RATE=1
# SENTRY_PROFILES_SAMPLE_RATE=1

# Kafka Configuration
KAFKA_BROKER_URL=localhost:29092
