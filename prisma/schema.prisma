model SubscriptionAccess {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String   @db.ObjectId
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Content access
  collectionId String?  @db.ObjectId
  collection   Collection? @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  lessonId     String?  @db.ObjectId
  lesson       Lesson?  @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  
  // Access metadata
  grantedAt    DateTime @default(now())
  expiresAt    DateTime? // Null = access until subscription expires
  accessType   String   @default("SUBSCRIPTION") // "SUBSCRIPTION", "TRIAL", "PROMOTIONAL"
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@unique([userId, collectionId, lessonId])
  @@index([userId, expiresAt])
  @@index([collectionId])
  @@index([lessonId])
}

model StudentEngagement {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  studentId   String   @db.ObjectId
  student     User     @relation("StudentEngagement", fields: [studentId], references: [id], onDelete: Cascade)
  
  // Content reference
  collectionId String? @db.ObjectId
  collection   Collection? @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  lessonId     String? @db.ObjectId
  lesson       Lesson? @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  
  // Engagement metrics
  watchTimeMinutes Int @default(0)
  lastWatchedAt     DateTime?
  completionPercent Float @default(0) // 0-100
  isCompleted       Boolean @default(false)
  completedAt       DateTime?
  
  // Period for subscription revenue
  period      String // "2024-01" format
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([studentId, collectionId, lessonId, period])
  @@index([collectionId, period])
  @@index([lessonId, period])
  @@index([studentId, period])
}

model SubscriptionRevenuePool {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  period      String   @unique // "2024-01" format
  periodStart DateTime
  periodEnd   DateTime
  
  // Revenue metrics
  totalRevenue      Float @default(0) // Total subscription revenue for period
  platformFee       Float @default(0) // Platform's cut
  teacherPool       Float @default(0) // Amount distributed to teachers
  totalWatchTime    Int   @default(0) // Total minutes watched by subscribers
  totalEngagements  Int   @default(0) // Total lesson completions
  
  // Distribution status
  status      String @default("PENDING") // "PENDING", "CALCULATING", "DISTRIBUTED"
  distributedAt DateTime?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  earnings    TeacherEarnings[]
  
  @@index([period, status])
}

model LiveWorkshop {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  teacherId   String   @db.ObjectId
  teacher     User     @relation("LiveWorkshopTeacher", fields: [teacherId], references: [id], onDelete: Cascade)
  
  title       String
  description String?
  scheduledAt DateTime
  duration    Int // Duration in minutes
  maxSeats    Int
  currentSeats Int @default(0)
  
  // Pricing
  pricePerSeat Float
  platformFeePercent Float @default(0.30) // Configurable
  platformFeeAmount  Float
  teacherEarnings    Float // Calculated after platform fee
  
  // Access
  joinLink    String?
  meetingId    String?
  recordingUrl String? // Available after workshop ends
  
  // Status
  status      String @default("SCHEDULED") 
    // "SCHEDULED", "LIVE", "COMPLETED", "CANCELLED"
  
  // Enrollment
  enrollments LiveWorkshopEnrollment[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([teacherId, scheduledAt])
  @@index([status, scheduledAt])
}

model LiveWorkshopEnrollment {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  workshopId  String   @db.ObjectId
  workshop    LiveWorkshop @relation(fields: [workshopId], references: [id], onDelete: Cascade)
  studentId   String   @db.ObjectId
  student     User     @relation("LiveWorkshopStudent", fields: [studentId], references: [id], onDelete: Cascade)
  
  paymentId   String?  @unique @db.ObjectId
  payment     Payment? @relation(fields: [paymentId], references: [id])
  
  attended    Boolean  @default(false)
  attendanceAt DateTime?
  
  createdAt   DateTime @default(now())
  
  @@unique([workshopId, studentId])
  @@index([workshopId])
  @@index([studentId])
}

model FeatureFlag {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  description String?
  enabled     Boolean  @default(false)
  rolloutPercent Int   @default(0) // 0-100, for gradual rollout
  
  // Targeting
  targetRoles String[] // ["TEACHER", "STUDENT"] - empty = all
  targetUserIds String[] // Specific user IDs for beta testing
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([name, enabled])
}
